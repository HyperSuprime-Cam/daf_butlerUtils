#<?cfg paf policy ?>

# Minimal mapper configuration policy

needCalibRegistry: true
calibRegistryPath: "tests/calibRegistry.sqlite3"
exposures: {
    raw: {
        template:    "foo-%(ccd)02d.fits"
        python:      "lsst.afw.image.Exposure"
        cpp:         "lsst::afw::image::Exposure"
        storage:     "FitsStorage"
        level:       "Ccd"
        tables:      "raw"
    }
}
calibrations: {
    flat: {
        template:    "%(path)s/flat-%(derivedRunId)s-f%(filter)s.fits"
        python:      "lsst.afw.image.Exposure"
        cpp:         "lsst::afw::image::Exposure"
        storage:     "FitsStorage"
        level:       "Amp"
        tables:      "flat"
        validRange:  true
        reference:   "raw"
    }
}
